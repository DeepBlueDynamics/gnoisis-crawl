# Gnosis-Crawl Environment Configuration

# Server Configuration
HOST=0.0.0.0
PORT=8080
DEBUG=false

# Storage Configuration
STORAGE_PATH=./storage
RUNNING_IN_CLOUD=false
GCS_BUCKET_NAME=gnosis-crawl-storage

# Authentication
GNOSIS_AUTH_URL=http://gnosis-auth:5000

# Crawling Configuration
MAX_CONCURRENT_CRAWLS=5
CRAWL_TIMEOUT=30
ENABLE_JAVASCRIPT=true
ENABLE_SCREENSHOTS=false

# Browser Configuration
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30000

# Cloud Configuration (for production)
GOOGLE_CLOUD_PROJECT=your-project-id
CLOUD_TASKS_QUEUE=crawl-jobs
CLOUD_TASKS_LOCATION=us-central1
WORKER_SERVICE_URL=https://your-service-url